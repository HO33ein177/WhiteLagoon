@model IEnumerable<Villa>

<div class="container my-5">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-success text-white text-center py-4">
            <h2>Villa's List</h2>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-12 text-end">
                    
                    <a asp-controller="Villa" asp-action="Create" class="btn btn-success">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                        </svg>
                        Create New Villa
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Sqft</th>
                            <th>Occupancy</th>
                            <th> Edit </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var villa in Model)
                        {
                            <tr>
                                <td>@villa.Name</td>
                                <td>@villa.Price.ToString("C")</td>
                                <td>@villa.Sqft</td>
                                <td>@villa.Occupancy</td>
                                <td>
                                    <div class=" w-75 btnbtn-group" role="group">
                                        <a asp-controller="Villa" asp-action="Update" asp-route-villaId="@villa.Id"
                                            class="btn btn-success mx-2">
                                            <i class="bg bi-pencil-square"></i> Update
                                        </a>
                                        <a asp-controller="Villa" asp-action="Delete" asp-route-villaId="@villa.Id"
                                           class="btn btn-danger mx-2">
                                            <i class="bg bi-trash-fill"></i> Delete
                                        </a>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .card-header {
        background: linear-gradient(45deg, #5645, #218838);
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }
</style>
